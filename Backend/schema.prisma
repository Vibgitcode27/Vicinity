datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

generator db {
  provider = "go run github.com/steebchen/prisma-client-go"
}

model User {
  UserID         String @id @default(cuid())
  LastName       String
  FirstName      String
  ProfilePicture String
  Location       String
  Bio            String
  Email          String @unique
  Username       String @unique
}
